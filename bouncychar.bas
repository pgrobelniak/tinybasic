10 W=80: H=24: X=W/2: Y=H/2: DX=1: DY=1
20 SET 10,1
30 CLS
40 X=X+DX
50 Y=Y+DY
60 IF X=W THEN DX=DX*(-1): X=W-1
70 IF X<0 THEN DX=DX*(-1): X=0
80 IF Y=H THEN DY=DY*(-1): Y=H-1
90 IF Y<0 THEN DY=DY*(-1): Y=0
100 @X=X: @Y=Y
110 PRINT "@";
115 @X=1: @Y=1: PRINT "X:",X,"Y:",Y
120 SET 10,0
125 DELAY 50
130 GOTO 20
