10 W=640: REM SCREEN_WIDTH
15 H=480: REM SCREEN_HEIGHT
20 PW=100: REM PADDLE_WIDTH
25 T=20: REM BALL_SIZE
30 S=10: REM PADDLE_SPEED
35 BR=4: REM BLOCK_ROWS
40 BC=10: REM BLOCK_COLS
45 V=0: REM PADDLE_VEL
50 PX=(W-PW)/2: REM PADDLE_X
55 PY=H-T: REM PADDLE_Y
60 LX=(W-T)/2: REM BALL_X
65 LY=PY-T: REM BALL_Y
70 DIM W(BR*BC): REM BLOCKS_ARRAY
75 BW=W/BC: REM BLOCK_WIDTH
80 VX=-1: REM BALL_VELX
85 VY=-1: REM BALL_VELY
100 REM RESET_BLOCKS
105 FOR R=1 TO BR
110 FOR C=1 TO BC
115 I=(R-1)*BC+C
120 W(I)=1
125 NEXT C
130 NEXT R
200 REM START_DRAWING
205 SET 10,1
210 COLOR 0,255,0
215 FRECT 0,0,W,H
220 COLOR 0,0,0
500 REM DRAW_BLOCKS
505 FOR R=1 TO BR
510 FOR C=1 TO BC
515 I=(R-1)*BC+C
520 IF W(I)=1 THEN GOSUB 1000
525 NEXT C
530 NEXT R
545 REM DRAW_BALL
550 FCIRCLE LX+T/4,LY+T/4,T/2
555 REM DRAW_PADDLE
560 FRECT PX,PY,PX+PW,PY+T
900 REM END_DRAWING
905 SET 10,0
910 END
1000 REM DRAW_BLOCK
1005 X=(C-1)*BW
1010 Y=(R-1)*T
1011 PRINT X,Y
1015 FRECT X+1,Y+1,X+BW-2,Y+T-2
1020 RETURN

